{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "build",
        "allowJs": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": true,
        "isolatedModules": true,
        "sourceMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*",
        "**/*.spec.ts"
    ]
}