{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "isolatedModules": true,
        "outDir": "build",
        "sourceMap": true,
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*",
        "**/*.spec.ts"
    ]
}
